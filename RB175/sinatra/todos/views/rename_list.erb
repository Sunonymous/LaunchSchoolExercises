<% list = active_list(@active_id) %>
<section id="todos">
  <header>
    <h2>Editing '<%= list[:name] %>'</h2>
    <ul>
      <li>
        <form class="delete" action="/list/<%= @active_id %>/delete" method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>
<form action="/rename/<%= @active_id %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter a new name:</label>
    </dt>
    <dd>
    <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || active_list(@active_id)[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/list/<%= @active_id %>">Cancel</a>
  </fieldset>
</form>
